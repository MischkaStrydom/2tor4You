            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:text="@string/txtSubject"
                    android:textColor="#CCFFFF"
                    android:textSize="16sp" />





                <!-- Subject Radio Buttons 1-3 -->
                <!-- first 2 subjects-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/chkMath"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_radio_button"
                        android:button="@null"
                        android:fontFamily="@font/font3"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:scaleType="centerInside"


                        android:text="@string/chkMath"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/chkHistory"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_radio_button"
                        android:button="@null"
                        android:fontFamily="@font/font3"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:scaleType="centerInside"
                        android:text="@string/chkHistory"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <!-- second 2 subjects-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <CheckBox
                        android:id="@+id/chkAfrikaans"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_radio_button"
                        android:button="@null"
                        android:fontFamily="@font/font3"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:scaleType="centerInside"
                        android:textStyle="bold"

                        android:text="@string/chkAfrikaans"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        />

                    <CheckBox
                        android:id="@+id/chkEnglish"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_radio_button"
                        android:button="@null"
                        android:fontFamily="@font/font3"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:scaleType="centerInside"
                        android:text="@string/chkEnglish"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        />


                </LinearLayout>



            </LinearLayout>

