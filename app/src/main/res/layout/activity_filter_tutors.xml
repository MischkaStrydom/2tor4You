        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txtLessonLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="@string/txtLessonLocation"
                android:textStyle="bold"
                android:textColor="#CCFFFF"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdoOnlineFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:buttonTint="@color/teal_200"
                android:text="@string/rdoOnlineFilter"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rdoInPersonFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:buttonTint="@color/teal_200"
                android:text="@string/rdoInPersonFilter"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtHourlyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="@string/txtHourlyRate"
                android:textStyle="bold"
                android:textColor="#CCFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R100"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textSize="14dp"/>

            <SeekBar
                android:id="@+id/seekBarHourlyRate"
                android:layout_width="372dp"
                android:layout_height="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/account_round_back_white"
                android:progressTint="#009688"
                app:trackColor="@color/grey"
                android:contentDescription="@string/txtHourlyRate"
                android:max="500"
                android:progress="100"/>

