                android:background="@drawable/bg_radio_round"
                android:button="@null"
                android:gravity="center"
                android:layoutDirection="rtl"


                android:text="@string/rdoGrade6"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rdoGrade7"
