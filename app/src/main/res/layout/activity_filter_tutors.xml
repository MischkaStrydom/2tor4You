                android:button="@null"
                android:gravity="center"
                android:layoutDirection="rtl"


                android:text="@string/rdoGrade9"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rdoGrade10"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_radio_round"
                android:button="@null"
                android:gravity="center"
                android:layoutDirection="rtl"


                android:text="@string/rdoGrade10"
                android:textColor="@color/black"
                android:textSize="24sp" />


            <RadioButton
                android:id="@+id/rdoGrade11"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_radio_round"
                android:button="@null"
                android:gravity="center"
                android:layoutDirection="rtl"

                android:text="@string/rdoGrade11"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rdoGrade12"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_radio_round"
                android:button="@null"
                android:gravity="center"
                android:layoutDirection="rtl"


                android:text="@string/rdoGrade12"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </RadioGroup>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txtLessonLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="@string/txtLessonLocation"
                android:textStyle="bold"
                android:textColor="#CCFFFF"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdoOnlineFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:buttonTint="@color/teal_200"
                android:text="@string/rdoOnlineFilter"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rdoInPersonFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:buttonTint="@color/teal_200"
                android:text="@string/rdoInPersonFilter"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtHourlyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="@string/txtHourlyRate"
                android:textStyle="bold"
                android:textColor="#CCFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R100"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textSize="14dp"/>

            <SeekBar
                android:id="@+id/seekBarHourlyRate"
                android:layout_width="372dp"
                android:layout_height="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/account_round_back_white"
                android:progressTint="#009688"
                app:trackColor="@color/grey"
                android:contentDescription="@string/txtHourlyRate"
                android:max="500"
                android:progress="100"/>

<!--            <TextView-->
<!--                android:id="@+id/txtStarRating"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:gravity="left"-->
<!--                android:paddingLeft="20dp"-->
<!--                android:text="@string/txtStarRating"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="#CCFFFF"-->
<!--                android:textSize="16sp" />-->

<!--            <RatingBar-->
<!--                android:id="@+id/starRatingBar"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:layout_marginTop="7dp"-->
<!--                android:contentDescription="@string/txtStarRating"-->
<!--                android:numStars="5"-->
<!--                android:stepSize="1"-->
<!--                android:theme="@style/RatingBar" />-->

            <TextView
                android:id="@+id/txtAddFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:text="@string/txtAddFilters"
                android:textStyle="bold"
                android:textColor="#CCFFFF"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdoQualifiedTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:buttonTint="@color/teal_200"
                android:text="@string/rdoQualifiedTeacher"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"

                android:gravity="center"
                android:orientation="horizontal"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="394dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ShowResults"
                android:layout_width="wrap_content"
